<div{{ attributes }} class="home-search searchbar">
    <input
            type="search"
            data-model="query"
            placeholder="Exemple : Le voyage de Chihiro"
            class="form-control"
    >

    {% if computed.movies|length > 0 %}
        <div data-loading="addClass(opacity-50)" class="results">
            {% for movie in computed.movies %}
                <a href="" class="movie-result">
                    <img src="https://image.tmdb.org/t/p/original{{ movie.posterUrl }}" alt="{{ movie.title }}">
                    <h3>
                        {{ movie.title }}
                    </h3>
                </a>
            {% endfor %}
        </div>
    {% elseif query is not null %}
        <div class="results">Ah! No movies found matching "{{ query }}"</div>
    {% endif %}
</div>
